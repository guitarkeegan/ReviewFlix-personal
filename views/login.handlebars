{{!-- Login/Signup page --}}
<div class="container text-center mt-5">
  <h1>Sign up or login to leaver your Reviews</h1>
  <a id="h1" href="/">Bring me back</a>
</div>

<div class="flex-container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="login-header">Login</h2>

{{!-- Login Form --}}
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login col-form-label">Email:</label>
        <input class="form-input form-control" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login col-form-label">Password:</label>
        <input class="form-input form-control" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  {{!-- SignUp Form --}}
  <div class="col-md-6">
    <h2 class="signup-header">Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label class="col-form-label" for="name-signup">Name:</label>
        <input class="form-input form-control" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label class="col-form-label" for="email-signup">Email:</label>
        <input class="form-input form-control" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label class="col-form-label" for="password-signup">Password:</label>
        <input class="form-input form-control" type="password" id="password-signup" />
      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
    {{!-- Buttons to upload cloudinary --}}
    <button id="upload_widget" class="cloudinary-button btn btn-primary">Upload Profile Photo</button>

  </div>
</div>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  